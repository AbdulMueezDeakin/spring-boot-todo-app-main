
pipeline {
    agent any
    tools {
      maven '3.9.6'
      jdk 'JDK 17'
     }
    // environment{
     //   DOCKER_IMAGE = "spring-boot-todo-app-main"
        //DataTog
     //}
    stages {
        stage('Build') {
            steps {
                // Build Spring Boot application
                 script {
                    sh 'mvn clean package'
                    archiveArtifacts artifacts: '**/target/*.jar', fingerprint: true
                    //archiveArtifacts artifacts: '**/target/*.jar', fingerprint: true
                }
            }
            post {
                success {
                    echo 'Build succeeded'
                }
                failure {
                    echo 'Build failed'
                }
            }
        }
      
    }
}
